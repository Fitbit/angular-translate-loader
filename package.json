{
  "name": "angular-translate-loader",
  "description": "`angular-translate` loader for webpack",
  "main": "dist/index.js",
  "files": [
    "dist/",
    "src/"
  ],
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./coverage",
    "eslint": "eslint ./ --cache",
    "build": "babel src --out-dir dist --source-maps",
    "test": "babel-node jasmine.js",
    "cover": "NODE_ENV=test nyc --reporter=lcov jasmine JASMINE_CONFIG_PATH=jasmine.json",
    "postcover": "nyc report",
    "codeclimate": "codeclimate-test-reporter < ./coverage/lcov.info",
    "gitdown": "gitdown ./.gitdown/README.md --output-file ./README.md",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "nyc": {
    "include": [
      "src/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "author": "Marat Dreizin <marat.dreizin@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mdreizin/angular-translate-loader.git"
  },
  "keywords": [
    "webpack",
    "angular",
    "translate"
  ],
  "bugs": {
    "url": "https://github.com/mdreizin/angular-translate-loader/issues"
  },
  "homepage": "https://github.com/mdreizin/angular-translate-loader",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^2.0.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.13.0",
    "babel-register": "^6.14.0",
    "codeclimate-test-reporter": "^0.4.0",
    "eslint": "^3.12.0",
    "eslint-config-mdreizin": "^1.1.1",
    "eslint-plugin-babel": "^4.0.0",
    "fs-extra": "^1.0.0",
    "gitdown": "^2.4.9",
    "jasmine": "^2.4.1",
    "jasmine-spec-reporter": "^2.5.0",
    "nyc": "^10.0.0",
    "semantic-release": "^6.3.2",
    "travis-after-all": "^1.4.4"
  },
  "dependencies": {
    "babel-runtime": "^6.9.2",
    "loader-utils": "^0.2.15",
    "lodash": "^4.16.6"
  }
}
